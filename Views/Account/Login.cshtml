@model BuyWebPage.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">

    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-6 col-sm-6 col-sm-offset-6">
        <div class="well">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Username">Username</label>
                    <input class="form-control" type="text" asp-for="Username" />
                    <span asp-validation-for="Username" class="text-muted"></span>

                </div>
                <div class="form-group">

                    <label asp-for="Password">Password</label>
                    <input class="form-control" type="password" asp-for="Password"/>
                    <span asp-validation-for="Password"></span>

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Login</button>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-default">Registrarse</a>
                </div>
                <a class="text-info">Did you forget your password?</a>
            </form>
        </div>


    </div>

</div>



