@{
    ViewBag.title = "Home Page";
}

<div class="row">
    <div class="col-lg-12">
        <div class="thumbnail product-info ">
            <img src="~/img/VanGogh.jpg" class="img-responsive img-thumbnail" />
            <h3>Mug</h3>
            <ul class="buy-thumbnail">
                <li>Price: $10</li>
                <li>Artist: Van Goth</li>
                <li>Title:</li>
                <li>Description: Self Portrait</li>
            </ul>
            <button id="buybutton" class="btn btn-primary">Buy</button>
        </div>
    </div>
</div>

<div>
    <div id="loginToggle">Login</div>
    <form class="Login form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-3">Username</label>
            <div class="col-md-5">
                <input type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Password</label>
            <div class="col-md-5">
                <input type="password" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-5">
                <div class="checkbox">
                    <label><input type="checkbox" />remember me?</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-sm-offset-2 col-xs-offset-2">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            </div>
        </div>
    </form>
</div>



